<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.woniukeji.jianguo.mine.AuthActivity">
<include
    android:id="@+id/in_title"
  layout="@layout/app_title_bar"
  />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/img_front"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:id="@+id/tv_front"
                android:layout_below="@+id/img_front"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="上传身份证正面"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_opposite"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/tv_opposite"
                android:layout_below="@+id/img_opposite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="上传身份证正面"
                />
        </RelativeLayout>
    </LinearLayout>
<TextView
    android:id="@+id/tv_notic1"
    android:layout_below="@id/ll_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="请保证您的身份证主要信息清晰可见"
    android:textSize="14sp"
    android:gravity="center"
    />
    <TextView
        android:layout_below="@+id/tv_notic1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="您可以将白纸置于桌面，将身份证置于纸上"
        android:gravity="center"
        android:textSize="12sp"
        />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:paddingLeft="15dp"
        >
        <ImageView
            android:id="@+id/img_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_photo"
            android:gravity="center"
            />
        <TextView
            android:layout_toRightOf="@+id/img_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手机号码"
            android:gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/img"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_pin"
            android:gravity="center"
            />

        <EditText
            android:layout_toLeftOf="@+id/img"
            android:id="@+id/et_phone_auth"
            android:gravity="center|right"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="未验证"
            android:maxLines="1"
            android:textSize="14sp"
            android:background="@color/float_transparent"
            android:singleLine="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:background="@color/white"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_pin"
            android:layout_gravity="center"

            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="真实姓名："
        />
        <EditText
            android:id="@+id/et_real_name"
            android:gravity="center|right"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入您的真实姓名"
            android:maxLines="1"
            android:textSize="14sp"
            android:background="@color/float_transparent"
            android:singleLine="true"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:background="@color/white"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_pin"
            android:layout_gravity="center"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号："
            />
        <EditText
            android:id="@+id/et_id"
            android:gravity="center|right"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text|phone"
            android:hint="请输入您的身份证号"
            android:maxLines="1"
            android:textSize="14sp"
            android:background="@color/float_transparent"
            android:singleLine="true"/>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:paddingLeft="15dp"
        >
        <ImageView
            android:id="@+id/or_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_photo"
            android:gravity="center"
            />
        <TextView
            android:layout_toRightOf="@+id/or_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="性别"
            android:gravity="center_vertical"
            />
   <RadioGroup
       android:id="@+id/rg_sex"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:orientation="horizontal"
       >
       <RadioButton
           android:id="@+id/rb_woman"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="女"
           android:button="@null"
           android:background="@android:color/transparent"
           android:drawableRight="@android:drawable/btn_radio"
           />
       <RadioButton
           android:id="@+id/rb_man"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="男"
           android:checked="true"
           android:button="@null"
           android:background="@android:color/transparent"
           android:drawableRight="@android:drawable/btn_radio"
           />

   </RadioGroup>
    </RelativeLayout>
    <Button
        android:id="@+id/check_button"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="37.5dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_background_login"
        android:text="提交审核"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_notic2"
        android:layout_below="@id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="兼果保证本资料仅供兼果平台使用"
        android:textSize="14sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/tv_notic3"
        android:layout_below="@id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="兼果拒绝向任何第三方透露您的资料"
        android:textSize="14sp"
        android:gravity="center"
        />
</LinearLayout>
