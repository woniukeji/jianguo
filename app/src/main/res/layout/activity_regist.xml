<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:background="#F1F1F1"
              tools:context=".activity.login.RegistActivity">

    <RelativeLayout
        android:background="@color/app_bg"
        style="@style/title_bar_style">

        <ImageView
            android:id="@+id/img_back"
            android:src="@mipmap/icon_back"
            android:layout_width="30dp"
            android:paddingLeft="3dp"
            android:paddingRight="8dp"
            android:layout_height="30dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_marginLeft="23dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18dp"
            android:maxEms="8"
            android:textColor="@color/white"
            android:text="@string/app_name"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <ImageView
            android:id="@+id/img_share"
            android:src="@mipmap/icon_share"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="15dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="23dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
    </RelativeLayout>

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="42dp"
                 android:gravity="center"
                 android:paddingLeft="15dp"
                 android:background="@color/white"
                 >
                 <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@mipmap/icon_photo"
                     android:layout_gravity="center"

                     />

                 <EditText
                     android:id="@+id/phoneNumber"
                     android:gravity="center|left"
                     android:layout_width="match_parent"
                     android:layout_height="40dp"
                     android:hint="请输入您的手机号"
                     android:inputType="text|phone"
                     android:maxLines="1"
                     android:textSize="14sp"
                     android:background="@color/float_transparent"
                     android:singleLine="true"/>


             </LinearLayout>

             <Button
                 android:id="@+id/btn_get_code"
                 android:layout_width="88dp"
                 android:layout_height="31dp"
                 android:layout_weight="4"
                 android:layout_centerVertical="true"
                 android:background="@drawable/button_background_login"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="13dp"
                 android:text="验证码"
                 android:textColor="@color/white"
                 android:textSize="12sp" />
         </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:src="@color/gray_btn_bg_color"
                android:paddingLeft="15dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:background="@color/white"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_pin"
                    android:layout_gravity="center"

                    />

                <EditText
                    android:id="@+id/phoneCode"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="请输入验证码"
                    android:inputType="text|phone"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:background="@color/float_transparent"
                    android:singleLine="true"/>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:src="@color/gray_btn_bg_color"
                android:paddingLeft="15dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:background="@color/white"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_password"
                    android:layout_gravity="center"

                    />

                <EditText
                    android:id="@+id/passWord1"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="请输入您的密码（6~32位）"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:background="@color/float_transparent"
                    android:singleLine="true"/>


            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:src="@color/gray_btn_bg_color"
                android:paddingLeft="15dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:background="@color/white"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_password2"
                    android:layout_gravity="center"

                    />

                <EditText
                    android:id="@+id/passWord2"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="请再次输入您的密码"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:background="@color/float_transparent"
                    android:singleLine="true"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/user_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                >
                <CheckBox
                    style="@style/MyCheck_Box"
                    android:id="@+id/cb_rule"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我已阅读并同意"

                    />
            </LinearLayout>
            <Button
                android:id="@+id/phone_sign_in_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="34dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"

                android:background="@drawable/button_background_login"
                android:text="提交"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>
</LinearLayout>
