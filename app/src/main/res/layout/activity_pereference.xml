<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_pereference"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    tools:context="com.woniukeji.jianguo.activity.setting.PereferenceActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:background="@color/app_bg"
        style="@style/title_bar_style">

        <ImageView
            android:id="@+id/iv_back"
            android:src="@mipmap/icon_back"
            android:layout_width="30dp"
            android:paddingLeft="3dp"
            android:paddingRight="8dp"
            android:layout_height="30dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_marginLeft="23dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="@color/white"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="23dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:maxEms="8"
            android:textColor="@color/white"
            android:text="求职意向"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <TextView
        android:layout_below="@+id/rl_top"
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="#333333"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <android.support.v7.widget.RecyclerView
    android:layout_below="@+id/tv_time"
    android:id="@+id/recycler_time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="#ffffff"
    >
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_below="@+id/recycler_time"
        android:id="@+id/tv_job_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="职业"
        android:textColor="#333333"
        android:gravity="center"
        android:textSize="14dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
       />
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/tv_job_type"
        android:id="@+id/recycler_job"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f3f3"
        android:dividerHeight="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
