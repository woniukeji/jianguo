<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_btn_bg_color"
    >
<RelativeLayout
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:background="@color/gray_btn_bg_color"
    android:layout_height="160dp">

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_bg"
        >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:gravity="center_vertical"
    >
    <ImageView
        android:id="@+id/img_head"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:src="@drawable/default_head"
        />
<LinearLayout
    android:id="@+id/ll_point"
    android:layout_width="wrap_content"
    android:layout_height="20dp"
    android:orientation="horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:layout_toRightOf="@+id/img_head"
    android:layout_gravity="center_vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="评分:  "
        android:gravity="left|center"
        android:layout_gravity="left"
        android:textColor="@color/white"
        android:textSize="12dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@mipmap/icon_star_on"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/icon_star_on"
        />
    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@mipmap/icon_star_on"
        />

</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img_head"
        android:layout_below="@+id/ll_point"
        android:gravity="center"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:text="结账快速"
        android:textSize="9dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/button_bg"
        />
    <TextView
        android:id="@+id/tv_add_attention"
        android:layout_width="66dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginRight="15dp"
        android:paddingLeft="5dp"
        android:text="关注"
        android:drawableLeft="@mipmap/icon_star"
        android:textSize="14dp"
        android:textColor="#ff9093"
        android:background="@mipmap/icon_attention_bg"
        />
</RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    >
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@mipmap/img_xuanxiang_bg"
        >
        <TextView
            android:id="@+id/tv_user_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1077"
            android:layout_centerHorizontal="true"
            android:textColor="@color/app_bg"
            />
        <TextView
            android:layout_below="@+id/tv_user_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="共服务用户"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@mipmap/img_xuanxiang_bg"
        android:layout_marginLeft="1dp"
        >
        <TextView
            android:id="@+id/tv_job_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="456"
            android:layout_centerHorizontal="true"
            android:textColor="@color/app_bg"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_job_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已提供兼职"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@mipmap/img_xuanxiang_bg"
        android:layout_marginLeft="1dp"
        >
        <TextView
            android:id="@+id/tv_fans_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="320"
            android:textColor="@color/app_bg"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_below="@+id/tv_fans_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粉丝"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            />
        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

    <TextView
        android:id="@+id/tv_part3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="#f87c7c"
        android:text="商家简介"
        android:textSize="15dp"
        android:gravity="left|center"
        android:background="@color/white"
        android:drawableLeft="@mipmap/icon_hot"
        android:drawablePadding="5dp"
        android:paddingLeft="15dp"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_below="@+id/tv_part3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_btn_bg_color"
        />
    <TextView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:text="   凯宾斯基酒店是一家大型的吃蛋的地方，有各种蛋，恐龙蛋，鸵鸟蛋，鹌鹑蛋等，经常有招聘发布，包括煎鸡蛋等职位"
        />

    <TextView
        android:id="@+id/tv_part4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="#f87c7c"
        android:text="在招的兼职"
        android:textSize="15dp"
        android:gravity="left|center"
        android:background="@color/white"
        android:drawableLeft="@mipmap/icon_hot"
        android:drawablePadding="5dp"
        android:paddingLeft="15dp"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_below="@+id/tv_part3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_btn_bg_color"
        />
</LinearLayout>
