<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp"
    android:background="@drawable/dialog_background"
    tools:context="com.woniukeji.jianguo.activity.mine.PicTipActivity">
    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拍摄示意"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="#666666"
        android:drawableBottom="@mipmap/take_pic_bg"
        />
    <TextView
        android:id="@+id/mid"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="为了提高识别率，请横向拍摄"
        android:gravity="center"
        android:textSize="12dp"
        android:textColor="#9b9b9b"
        />
<Button
    android:id="@+id/btn_iknow"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/button_background_login"
    android:layout_below="@+id/mid"
    android:text="我知道了"
    android:textSize="13dp"
    android:layout_marginTop="12dp"
    />
</RelativeLayout>
