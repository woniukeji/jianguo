<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/rl_job"
              android:layout_width="wrap_content"
              android:layout_height="78dp"
            >

    <ImageView
        android:id="@+id/user_head"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/button_background_login"
       />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_toRightOf="@+id/user_head"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/business_name"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:textSize="10sp"
        android:text="凯宾斯基酒店宴会服务员"

        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_height="10dp">
        <ImageView
            android:id="@+id/img_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_money"
            />
        <TextView
            android:layout_toRightOf="@+id/img_pay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="月结"
            android:textSize="8sp"
            android:gravity="center"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        >
        <ImageView
            android:id="@+id/img_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_date"
            />
        <TextView
            android:layout_toRightOf="@+id/img_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4月1号-4月6号"
            android:gravity="center"
            android:textSize="8sp"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        >
        <ImageView
            android:id="@+id/img_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_didian"
            />
        <TextView
            android:layout_toRightOf="@+id/img_local"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="海棠湾附近"
            android:gravity="center"
            android:textSize="8sp"
            />
    </RelativeLayout>

</LinearLayout>
    <TextView
        android:id="@+id/tv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_man"
        android:layout_alignParentRight="true"
        android:layout_marginRight="62dp"
        android:layout_marginTop="19dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/tv_enroll_num"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:text="18/25"
        android:layout_marginTop="10dp"
        android:layout_marginRight="18dp"
        android:textSize="10sp"
        android:gravity="center"
        android:textColor="#f87c7c"
        />
    <TextView
        android:id="@+id/tv_wages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_enroll_num"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="1800/月"
        android:layout_marginRight="18dp"
        android:textSize="12sp"
        android:textColor="#f87c7c"
        />
</RelativeLayout>
