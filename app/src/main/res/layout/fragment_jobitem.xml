<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rl_job"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:background="@color/white"
    >

    <ImageView
        android:id="@+id/user_head"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/button_background_login"
       />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="78dp"
    android:layout_marginLeft="5dp"
    android:layout_toRightOf="@+id/user_head"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_marginTop="2dp"
        android:text="凯宾斯基酒店宴会服务员"

        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:layout_height="15dp"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/img_pay"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/icon_money"
            />
        <TextView
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/img_pay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="月结"
            android:textSize="9dp"
            android:gravity="center"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_height="15dp"
        android:gravity="center"
        >
        >
        <ImageView
            android:id="@+id/img_date"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/icon_date"
            />
        <TextView
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/img_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4月1号-4月6号"
            android:gravity="center"
            android:textSize="9dp"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_height="15dp"
        android:gravity="center"
        >
        >
        <ImageView
            android:id="@+id/img_local"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/icon_didian"
            />
        <TextView
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/img_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海棠湾附近"
            android:gravity="center"
            android:textSize="9dp"
            />
    </RelativeLayout>

</LinearLayout>
    <TextView
        android:id="@+id/tv_sex"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@mipmap/icon_man"
        android:layout_alignParentRight="true"
        android:layout_marginRight="62dp"
        android:layout_marginTop="19dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        />
    <RelativeLayout
        android:id="@+id/rl_progess"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="17dp"
        >

        <com.liulishuo.magicprogresswidget.MagicProgressCircle
            android:id="@+id/demo_mpc"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:mpc_stroke_width="1dp"
            app:mpc_default_color="#61aeff"
           />


        <com.woniukeji.jianguo.widget.AnimTextView
            android:id="@+id/demo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="15/20"
            android:textColor="#f87c7c"
            android:textSize="9dp" />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_enroll_num"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:text="18/25"
        android:layout_marginTop="10dp"
        android:layout_marginRight="18dp"
        android:textSize="10sp"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="#f87c7c"
        />
    <TextView
        android:id="@+id/tv_wages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_progess"
        android:layout_alignParentRight="true"
        android:text="1800/月"
        android:layout_marginRight="18dp"
        android:layout_marginTop="7dp"
        android:textSize="12dp"
        android:textColor="#f87c7c"
        />
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_btn_bg_color"
        />
</RelativeLayout>
