<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rl_job"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:background="#f3f3f3"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="108dp"
    android:background="@color/white"
    android:layout_marginTop="1px"
    >

    <ImageView
        android:id="@+id/user_head"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
       />

    <RelativeLayout
        android:id="@+id/rl_progess"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:gravity="center|right"
        android:layout_marginRight="15dp"
        >




        <LinearLayout
            android:id="@+id/ll_zhaopin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:layout_alignParentTop="true"
           >
            <ImageView
                android:id="@+id/imgv_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/start"
                />

            <TextView
                android:id="@+id/tv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在招募"
                android:gravity="top"
                android:textSize="14dp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:text="仅剩3个名额"
            android:textColor="#9b9b9b"
            android:layout_below="@+id/ll_zhaopin"
            android:layout_marginTop="5dp"
            android:textSize="13dp"
            android:visibility="visible"
            android:id="@+id/tv_surplus"/>
        <TextView
            android:layout_below="@id/tv_surplus"
            android:id="@+id/tv_wages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1800/月"
            android:gravity="center|right"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textColor="#f87c7c"
            android:layout_alignRight="@+id/tv_surplus"
            android:layout_alignEnd="@+id/tv_surplus"/>
