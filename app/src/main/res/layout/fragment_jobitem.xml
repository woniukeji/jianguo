<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rl_job"
                android:layout_width="wrap_content"
                android:layout_height="117dp"
                android:background="#f3f3f3"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="108dp"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/user_head"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="15dp"
       />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_toRightOf="@+id/user_head"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="14dp"
        android:text="凯宾斯基酒店宴会服务员"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_marginTop="1dp"
        >
        <ImageView
            android:id="@+id/img_pay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_money"
            />
        <TextView
            android:id="@+id/tv_pay_method"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/img_pay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="月结"
            android:textSize="13dp"
            android:textColor="#9b9b9b"
            android:gravity="center"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_marginTop="1dp"
        >
        >
        <ImageView
            android:id="@+id/img_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_date"
            />
        <TextView
            android:id="@+id/tv_date"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/img_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4月1号-4月6号"
            android:textColor="#9b9b9b"
            android:gravity="center"
            android:textSize="13dp"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_marginTop="1dp"
        >
        >
        <ImageView
            android:id="@+id/img_local"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_didian"
            />
        <TextView
            android:id="@+id/tv_location"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/img_local"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="海棠湾附近"
            android:textColor="#9b9b9b"
            android:gravity="center"
            android:textSize="13dp"
            />
    </RelativeLayout>

</LinearLayout>
    <ImageView
        android:id="@+id/img_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_man"
        android:layout_alignParentRight="true"
        android:layout_marginRight="75dp"
        android:layout_marginTop="16dp"
        />
    <RelativeLayout
        android:id="@+id/rl_progess"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        >

        <com.liulishuo.magicprogresswidget.MagicProgressCircle
            android:id="@+id/demo_mpc"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:mpc_stroke_width="3dp"
            app:mpc_start_color="#5edfd9"
            app:mpc_end_color="#5edfd9"
           app:mpc_default_color="#f3f4f3"
           />


        <com.woniukeji.jianguo.widget.AnimTextView
            android:id="@+id/demo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="15/20"
            android:textSize="9dp" />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_enroll_num"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:text="18/25"
        android:layout_marginTop="10dp"
        android:layout_marginRight="18dp"
        android:textSize="10sp"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="#f87c7c"
        />
    <TextView
        android:id="@+id/tv_wages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:text="1800/月"
        android:layout_marginRight="18dp"
        android:textSize="12dp"
        android:textColor="#f87c7c"
        />
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_btn_bg_color"
        />

</RelativeLayout>
</RelativeLayout>
