    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray_btn_bg_color"
        />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="9dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/user_head"
        android:layout_toEndOf="@+id/user_head"
        android:layout_marginStart="9dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_gravity="center|left"
        android:weightSum="1">

        <TextView
            android:id="@+id/business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="兼职名称"
            android:gravity="center|left"
            android:layout_gravity="center"
            android:maxEms="9"
            android:ellipsize="end"
            android:maxLines="1"
            />

        <ImageView
            android:id="@+id/img_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cq"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            />

        <ImageView
            android:id="@+id/img_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/m"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:id="@+id/img_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/past"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            />
    </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_marginTop="1dp"
            >
            <ImageView
                android:id="@+id/img_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_money"
                />
            <TextView
                android:id="@+id/tv_pay_method"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/img_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="月结"
                android:textSize="13dp"
                android:textColor="#9b9b9b"
                android:gravity="center"

                />
            <ImageView
                android:id="@+id/img_look"
                android:layout_toRightOf="@id/tv_pay_method"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/look"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/tv_look"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/img_look"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="123"
                android:textSize="13dp"
                android:textColor="#9b9b9b"
                android:gravity="center"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_marginTop="1dp"
            >
            <ImageView
                android:id="@+id/img_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_date"
                />
            <TextView
                android:id="@+id/tv_date"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/img_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4月1号-4月6号"
                android:textColor="#9b9b9b"
                android:gravity="center"
                android:textSize="13dp"

                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_marginTop="1dp"
            >

            <ImageView
                android:id="@+id/img_local"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_didian"
                />
            <TextView
                android:id="@+id/tv_location"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/img_local"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="凯宾斯基酒店宴会服务员,是干什么的啊"
                android:maxEms="14"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#9b9b9b"
                android:gravity="center"
                android:textSize="13dp"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
</RelativeLayout>
