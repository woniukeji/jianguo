<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f3f3f3"
    tools:context=".mine.MineFragment">


    <RelativeLayout
        android:id="@+id/title_bar"
         android:background="@color/app_bg"
           style="@style/title_bar_style"
        >

        <ImageView
            android:id="@+id/img_back"
            android:src="@mipmap/icon_back"
            android:layout_width="11dp"
            android:layout_height="18dp"
            android:layout_marginLeft="23dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="兼果"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:background="@mipmap/img_bg"
        android:layout_height="136dp">
        <ImageView
            android:id="@+id/img_head"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/icon_head_defult"
            />
<LinearLayout
    android:layout_toRightOf="@id/img_head"
    android:id="@+id/lin_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="12dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尚未填写"
            android:textSize="16dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信用优秀"
            android:layout_marginLeft="13dp"
            android:textSize="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:background="@drawable/textview_bg"
            android:visibility="gone"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="14dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/phone"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text=" "
        android:textColor="@color/white"
        />
</LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wallte_realname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/ll_money"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginRight="1dp"
                android:background="@mipmap/img_xuanxiang_bg"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_wallet"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的钱包"
                    android:textSize="15dp"
                    android:textColor="#3A9DFF"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_real_name"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@mipmap/img_xuanxiang_bg"
                android:layout_marginLeft="1dp"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_renzheng"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实名认证  "
                    android:textColor="#3A9DFF"
                    android:textSize="15dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_enter"
            android:layout_above="@+id/ll_wallte_realname"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_enter"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            />
        <TextView
            android:layout_toLeftOf="@+id/img_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_above="@+id/ll_wallte_realname"
            android:layout_marginBottom="5dp"
            android:textSize="14dp"
            android:visibility="gone"
            android:text="账户管理"
            />
        <RelativeLayout
            android:id="@+id/account1"
            android:layout_width="match_parent"
            android:background="@mipmap/img_bg"
            android:visibility="gone"
            android:layout_height="136dp">
            <ImageView
                android:id="@+id/img_head1"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/icon_head_defult"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:text="登录/注册"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/img_head1"
                />
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/credit"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginTop="9dp"
        android:paddingLeft="15dp"
        >
        <ImageView
            android:id="@+id/or_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_pingjia"
            android:gravity="center"
            />
        <TextView
            android:layout_toRightOf="@+id/or_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的资料"
            android:textSize="16dp"
            android:gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/img"
            android:layout_alignParentRight="true"
            android:layout_width="10dp"

            android:layout_height="match_parent"
            android:src="@mipmap/icon_go"
            android:gravity="center"
            android:layout_marginRight="17dp"
            />
        <TextView
            android:layout_toLeftOf="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="90"
            android:textSize="16dp"
            android:textColor="#9B9B9B"
            android:layout_marginRight="7dp"
            android:gravity="center"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_btn_bg_color"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_evaluation"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/or_img1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_pingjia"
            android:gravity="center"
            />
        <TextView
            android:layout_toRightOf="@+id/or_img1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="收到的评价"
            android:gravity="center_vertical"
            android:textSize="16dp"
            />
        <ImageView
            android:id="@+id/img1"
            android:layout_alignParentRight="true"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_go"
            android:gravity="center"
            android:layout_marginRight="17dp"
            />
        <TextView
            android:layout_toLeftOf="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:layout_marginRight="7dp"
            android:textSize="16dp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_btn_bg_color"
            android:layout_marginLeft="3dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ll_collect"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:background="@color/white"
        android:paddingLeft="15dp"
        >
        <ImageView
            android:id="@+id/point_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_shoucang"
            android:gravity="center"
            />
        <TextView
            android:layout_toRightOf="@+id/point_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="收藏与关注"
            android:textSize="16dp"
            android:gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/img2"
            android:layout_alignParentRight="true"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_go"
            android:gravity="center"
            android:layout_marginRight="17dp"
            />
        <TextView
            android:layout_toLeftOf="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:layout_marginRight="7dp"
            android:textSize="16dp"
            android:gravity="center"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_point"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/point_img1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_jifen"
            android:gravity="center"
            />
        <TextView
            android:layout_toRightOf="@+id/point_img1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的积分"
            android:textSize="16dp"
            android:gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/img5"
            android:layout_alignParentRight="true"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_go"
            android:gravity="center"
            android:layout_marginRight="17dp"
            />
        <TextView
            android:layout_toLeftOf="@+id/img5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="90"
            android:textColor="#9B9B9B"
            android:layout_marginRight="7dp"
            android:textSize="16dp"
            android:gravity="center"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_feedback"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        >
        <ImageView
            android:id="@+id/or_img5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_fankui"
            android:gravity="center"
            />
        <TextView
            android:layout_toRightOf="@+id/or_img5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="意见反馈"
            android:textSize="16dp"
            android:gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/img6"
            android:layout_alignParentRight="true"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_go"
            android:gravity="center"
            android:layout_marginRight="17dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_btn_bg_color"
            android:layout_marginLeft="3dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="15dp"
        >
        <ImageView
            android:id="@+id/img_01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_gengxin"
            android:gravity="center"
            android:padding="5dp"
            />
        <TextView
            android:layout_toRightOf="@+id/img_01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="检测更新"
            android:paddingLeft="1dp"
            android:gravity="center_vertical"
            android:textSize="16dp"
            />
        <ImageView
            android:id="@+id/img_02"
            android:layout_alignParentRight="true"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_go"
            android:gravity="center"
            android:layout_marginRight="17dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_btn_bg_color"
            android:layout_marginLeft="3dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/or_img3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_shezhi"
            android:gravity="center"
            />
        <TextView
            android:layout_toRightOf="@+id/or_img3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="设置"
            android:textSize="16dp"
            android:gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/img4"
            android:layout_alignParentRight="true"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_go"
            android:gravity="center"
            android:layout_marginRight="17dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="15dp"
        >
        <ImageView
            android:id="@+id/img_03"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_we"
            android:gravity="center"
            android:padding="4dp"
            />
        <TextView
            android:layout_toRightOf="@+id/img_03"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="关于我们"
            android:gravity="center_vertical"
            android:textSize="16dp"
            />
        <ImageView
            android:id="@+id/img_04"
            android:layout_alignParentRight="true"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_go"
            android:gravity="center"
            android:layout_marginRight="17dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_btn_bg_color"
            android:layout_marginLeft="3dp"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_background_logout"
        android:text="退出登录"
        android:textSize="14dp"
        android:textColor="@color/white"
        />
</LinearLayout>
