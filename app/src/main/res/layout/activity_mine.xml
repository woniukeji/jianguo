<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    tools:context=".mine.MineFragment"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:background="@mipmap/pic"
        android:layout_height="178dp">

        <ImageView
    android:id="@+id/iv_setting"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/shezhi"
    android:layout_alignParentRight="true"
    android:padding="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    />
        <com.woniukeji.jianguo.widget.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/title_bar"
            android:src="@mipmap/icon_head_defult"
            />
        <TextView
            android:id="@+id/name"
            android:layout_below="@+id/img_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="登录/注册"
            android:textSize="12dp"
            android:textColor="@color/white"
            />
<LinearLayout
    android:layout_toRightOf="@id/img_head"
    android:id="@+id/lin_info"
    android:layout_below="@+id/title_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="12dp"
    android:visibility="gone"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信用优秀"
            android:layout_marginLeft="13dp"
            android:textSize="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:background="@drawable/textview_bg"
            android:visibility="gone"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="14dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/phone"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text=" "
        android:textColor="@color/white"
        />
</LinearLayout>


        <RelativeLayout
            android:id="@+id/account1"
            android:layout_width="match_parent"
            android:background="@mipmap/img_bg"
            android:visibility="gone"
            android:layout_height="180dp">
            <TextView
                android:id="@+id/title_bar1"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:text="兼果"
                />
            <ImageView
                android:layout_below="@+id/title_bar1"
                android:id="@+id/img_head1"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/icon_head_defult"
                />

            <TextView
                android:layout_below="@+id/title_bar1"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:text="登录/注册"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/img_head1"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="我的"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_wallte_realname"
        android:layout_width="match_parent"
        android:layout_height="43.5dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/ll_money"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="1dp"
            android:background="?android:attr/selectableItemBackground"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qianbao"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="我的钱包"
                android:textSize="14dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="36dp"
            android:background="#f3f3f3"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:id="@+id/ll_real_name"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:background="?android:attr/selectableItemBackground"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/renzheng"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实名认证 "
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:id="@+id/textView5"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f3f3f3"
            />
    <RelativeLayout
        android:id="@+id/credit"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="15dp"
        >
        <ImageView
            android:id="@+id/or_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/geren"
            android:gravity="center"
            />
        <TextView
            android:layout_toRightOf="@+id/or_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的资料"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_bg"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:background="@mipmap/go"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_btn_bg_color"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_guanli"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="15dp"
        >

        <TextView
            android:layout_toRightOf="@+id/point_img9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="兼职管理"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_bg"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_go"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_btn_bg_color"
            />

        <ImageView
            android:id="@+id/point_img9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/guanli"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_evaluation"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/or_img1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_pingjia"
            android:gravity="center"
            />
        <TextView
            android:layout_toRightOf="@+id/or_img1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="收到的评价"
            android:gravity="center_vertical"
            android:textSize="16dp"
            />
        <ImageView
            android:id="@+id/img1"
            android:layout_alignParentRight="true"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_go"
            android:gravity="center"
            android:layout_marginRight="17dp"
            />
        <TextView
            android:layout_toLeftOf="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:layout_marginRight="7dp"
            android:textSize="16dp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_btn_bg_color"
            android:layout_marginLeft="3dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ll_collect"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="15dp"
        >
        <ImageView
            android:id="@+id/point_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/shoucang"
            android:gravity="center"
            />
        <TextView
            android:layout_toRightOf="@+id/point_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="收藏关注"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_btn_bg_color"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_bg"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_go"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/hobby"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="15dp"
        >

        <ImageView
            android:id="@+id/img_hobby"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/pianhao"
            android:gravity="center"
            />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_bg"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:background="@mipmap/go"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_btn_bg_color"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="求职意向"
            android:textSize="16dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/img_hobby"
            android:layout_toEndOf="@+id/img_hobby"
            android:id="@+id/textView3"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_point"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/point_img1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_jifen"
            android:gravity="center"
            />
        <TextView
            android:layout_toRightOf="@+id/point_img1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的积分"
            android:textSize="16dp"
            android:gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/img5"
            android:layout_alignParentRight="true"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_go"
            android:gravity="center"
            android:layout_marginRight="17dp"
            />
        <TextView
            android:layout_toLeftOf="@+id/img5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="90"
            android:textColor="#9B9B9B"
            android:layout_marginRight="7dp"
            android:textSize="16dp"
            android:gravity="center"
            />

    </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f3f3f3"
            />
    <RelativeLayout
        android:id="@+id/rl_feedback"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="15dp"
        >
        <ImageView
            android:id="@+id/or_img5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/fankui"
            android:gravity="center"
            />
        <TextView
            android:layout_toRightOf="@+id/or_img5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="意见反馈"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_bg"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_go"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_btn_bg_color"
            android:layout_marginLeft="3dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/or_img3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_shezhi"
            android:gravity="center"
            />
        <TextView
            android:layout_toRightOf="@+id/or_img3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="设置"
            android:textSize="16dp"
            android:gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/img4"
            android:layout_alignParentRight="true"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_go"
            android:gravity="center"
            android:layout_marginRight="17dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="15dp"
        >
        <ImageView
            android:id="@+id/img_03"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/women"
            android:gravity="center"
            />
        <TextView
            android:layout_toRightOf="@+id/img_03"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="关于我们"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="16dp"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_bg"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_go"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_btn_bg_color"
            android:layout_marginLeft="3dp"
            android:visibility="gone"
            />
    </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_background_logout"
        android:text="退出登录"
        android:textSize="14dp"
        android:visibility="gone"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        />
</LinearLayout>
</ScrollView>
