<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
   android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/dialog_bg"
    tools:context="com.woniukeji.jianguo.mine.TimePickerActivity">
    <RelativeLayout
        android:id="@+id/rl_pick"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp">


        <com.woniukeji.jianguo.widget.time.PickerDateView
            android:id="@+id/year_pv"
            android:layout_width="120dp"
            android:layout_height="170dp" />

        <com.woniukeji.jianguo.widget.time.PickerView
            android:id="@+id/month_pv"
            android:layout_width="80dp"
            android:layout_height="170dp"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@id/year_pv" />

        <com.woniukeji.jianguo.widget.time.PickerView
            android:id="@+id/day_pv"
            android:layout_width="80dp"
            android:layout_height="170dp"
            android:layout_toRightOf="@id/month_pv" />




    </RelativeLayout>
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:text="确定"
        android:textColor="@color/white"
        android:background="@drawable/button_background_login"

        />
</LinearLayout>
