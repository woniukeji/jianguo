<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
                android:background="@color/transparent"
              android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/rl_top"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:gravity="center_vertical"
    android:background="@color/app_color"
    >
    <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="北京"
        android:layout_marginLeft="8dp"
        android:textSize="16dp"
        android:gravity="center"
        android:textColor="#000000"
         android:drawableRight="@mipmap/city_down"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:src="@mipmap/logo_top"
        android:layout_centerInParent="true"
        />
    <ImageView
        android:id="@+id/img_sao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/saoyisao"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
<ImageView
    android:id="@+id/img_search"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@+id/img_sao"
    android:src="@mipmap/search"
    android:layout_centerVertical="true"
    android:layout_marginRight="11.5dp"
    />
</RelativeLayout>
    <ImageView
        android:layout_below="@+id/rl_top"
        android:id="@+id/img_banner"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@mipmap/banner"
        />
<LinearLayout
    android:layout_below="@+id/img_banner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="15dp"
    android:paddingBottom="10dp"
    android:background="#ffffff"
    >
    <RelativeLayout
        android:id="@+id/rela_market"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_market"
            android:src="@mipmap/chaoshi"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="超市"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/img_market"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rela_fruit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_friut"
            android:src="@mipmap/guoshu"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="果蔬"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/img_friut"
            />
    </RelativeLayout>
</LinearLayout>

</RelativeLayout>
