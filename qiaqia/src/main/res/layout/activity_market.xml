<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:text="超市"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:textSize="20sp"

        />
<TextView
    android:layout_below="@id/tv_title"
    android:id="@+id/tv_split"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/app_color"
    />
    <ImageView
        android:layout_below="@id/tv_title"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/red"
        />
    <LinearLayout
        android:layout_below="@id/tv_split"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/market_rv"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:background="@color/transparent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
     <!--   <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/app_bg"/>-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_goods"
            android:layout_width="0dp"
            android:layout_weight="0.72"
            android:background="#ffffff"
            android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_color"
        />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="27dp"
    android:layout_marginBottom="33dp"
    android:gravity="center_vertical"
    >
    <ImageView
        android:id="@+id/gouwudai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/gouwudai"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/gouwuche2"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/gouwudai"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总额：￥66元"
        android:layout_marginLeft="18dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/gouwudai"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/yuan"
        android:layout_marginLeft="36dp"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:text="5"
        android:gravity="center"
        android:layout_marginLeft="36dp"
        android:layout_alignParentTop="true"
        />
</RelativeLayout>
</RelativeLayout>
