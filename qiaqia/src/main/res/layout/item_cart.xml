<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="102dp">
    <ImageView
        android:id="@+id/iv_item_pic"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:src="@mipmap/yintao"
        android:layout_margin="11dp"
        />
    <TextView
        android:id="@+id/tv_item_name"
        android:layout_toRightOf="@id/iv_item_pic"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="11dp"
        android:layout_alignTop="@id/iv_item_pic"
        android:text="猫很顺利的恐惧爱思考多久；阿的江的卡路里的看哈"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/tv_item_color"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/tv_item_name"
        android:layout_alignLeft="@id/tv_item_name"
        android:text="颜色分类 :"/>
    <TextView
        android:id="@+id/tv_color_name"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_toRightOf="@id/tv_item_color"
        android:text="黄色狗狗球"
        android:layout_alignTop="@id/tv_item_color"
        />
    <TextView
        android:id="@+id/tv_item_price"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:textSize="12dp"
        android:text="7.00元"
        android:textColor="#E34C50"
        android:layout_below="@id/tv_item_color"
        android:layout_alignLeft="@id/tv_item_color"
        />
    <ImageView
        android:id="@+id/iv_item_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_item_price"
        android:src="@mipmap/jiahao"
        android:layout_marginRight="15dp"
        />
    <TextView
        android:id="@+id/tv_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="18dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        android:layout_toLeftOf="@id/iv_item_add"
        android:layout_alignTop="@id/iv_item_add"/>
    <ImageView
        android:id="@+id/iv_item_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_item_price"
        android:src="@mipmap/jiahao"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/tv_item_count"
        />


</RelativeLayout>
