<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rl_job"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:background="@color/gray"
    >

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <include layout="@layout/split_line"
            />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_marginTop="8dp"
        android:text="凯宾斯基酒店宴会服务员"
        />
<LinearLayout
    android:layout_below="@+id/tv_title"
    android:id="@+id/ll_publish_time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    >
        <TextView
            android:id="@+id/tv_location"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/img_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="发布时间："
            android:textColor="#9b9b9b"
            android:gravity="center"
            android:minEms="5"
            android:textSize="12dp"

            />
        <TextView
            android:id="@+id/tv_date"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/img_local"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4月1号"
            android:textColor="#9b9b9b"
            android:gravity="center"
            android:textSize="12dp"
            />

</LinearLayout>

    <LinearLayout
        android:id="@+id/ll_publisher"
        android:layout_below="@+id/ll_publish_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_human"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/img_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="负  责  人："
            android:minEms="5"
            android:textColor="#9b9b9b"
            android:gravity="center"
            android:textSize="12dp"

            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/img_local"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="哈哈"
            android:textColor="#9b9b9b"
            android:gravity="center"
            android:textSize="12dp"
            />

    </LinearLayout>



    <TextView
        android:id="@+id/tv_enroll_num"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:text="18/25"
        android:layout_marginTop="10dp"
        android:layout_marginRight="18dp"
        android:textSize="10sp"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="#f87c7c"
        />
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_btn_bg_color"
        />
<LinearLayout
    android:id="@+id/ll_muban"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginRight="5dp"
    >
    <Button
        android:id="@+id/btn_muban_use"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="23.5dp"
        android:background="@drawable/button_use"
        android:layout_marginBottom="8dp"
        android:text="使用"
        />

    <Button
        android:id="@+id/btn_muban_delete"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="23.5dp"
        android:text="删除"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_delete"
        />
</LinearLayout>

        <ImageView
            android:id="@+id/img_his"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_go"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
        <include layout="@layout/split_line"
                 android:layout_alignParentBottom="true"
            />
</RelativeLayout>

</RelativeLayout>
