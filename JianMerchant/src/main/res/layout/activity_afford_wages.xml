<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include
        android:id="@+id/top"
        layout="@layout/app_title_bar"
        />
    <LinearLayout
        android:id="@+id/ll_jobname"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        >
   <TextView
       android:layout_weight="1"
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:id="@+id/tv_job_name"
       android:text="凯宾斯基酒店会听服务员"
       android:gravity="center|left"
       android:textSize="14dp"
       android:layout_marginLeft="15dp"
       />
        <TextView
            android:id="@+id/tv_job_date"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="4月1号"
            android:textColor="#bfbfbf"
            android:textSize="10dp"
            android:gravity="center|right"
            android:paddingRight="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_jobinfo"
        android:layout_below="@+id/ll_jobname"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tv_sum"
            android:text="总计3人"
            android:gravity="center|left"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/tv_job_wages"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="150/天"
            android:textColor="#f87c7c"
            android:textSize="12dp"
            android:gravity="center|right"
            android:paddingRight="15dp"
            />
        <Button
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:background="@drawable/btn_gray_bg"
            android:text="修改"
            android:layout_marginRight="15dp"
            />
    </LinearLayout>

        <com.woniukeji.jianmerchant.widget.FixedRecyclerView
            android:id="@+id/list"
            android:layout_below="@+id/ll_jobinfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fastScrollEnabled="true"
            android:listSelector="@color/transparent"
            android:overScrollMode="never"
            android:scrollbarStyle="outsideOverlay" />
</RelativeLayout>
