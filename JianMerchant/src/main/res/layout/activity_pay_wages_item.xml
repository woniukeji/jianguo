<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_job"
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:background="@color/white"
    >

    <CheckBox
        android:id="@+id/cb_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        />
<ImageView
    android:layout_width="38dp"
    android:layout_height="38dp"
    android:id="@+id/img_head"
    android:layout_toRightOf="@+id/cb_user"
    android:src="@drawable/default_head"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    />

<LinearLayout
    android:layout_toRightOf="@+id/img_head"
    android:id="@+id/ll_publish_time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp"
    android:orientation="horizontal"
    >
        <TextView
            android:id="@+id/user_name"
            android:layout_marginLeft="4dp"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="小强呵呵呵"
            android:textColor="#9b9b9b"
            android:gravity="center|left"
            android:minEms="3"
            android:textSize="12dp"

            />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_real_tel"
        />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/img_local"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1338766309"
            android:textColor="#9b9b9b"
            android:gravity="center"
            android:textSize="12dp"
            />

</LinearLayout>


    <LinearLayout
        android:id="@+id/ll_wages"
        android:layout_below="@+id/ll_publish_time"
        android:layout_toRightOf="@+id/img_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginLeft="4dp"
            android:paddingLeft="15dp"
            android:layout_toRightOf="@+id/img_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="实发工资："
            android:minEms="5"
            android:textColor="#9b9b9b"
            android:gravity="center"
            android:textSize="12dp"

            />
        <TextView
            android:id="@+id/tv_wages"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/img_local"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="150元"
            android:textColor="#9b9b9b"
            android:gravity="center"
            android:textSize="12dp"
            />

    </LinearLayout>

    
    <Button
        android:id="@+id/btn_change_item"
        android:layout_width="65dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:text="修改"
        android:background="@drawable/button_calculate"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#bfbfbf"
            android:layout_below="@+id/ll_publisher"
            />


    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bfbfbf"
        />

</RelativeLayout>
